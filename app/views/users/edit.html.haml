  $(document).ready(function (){
    
    $("#edit_user").validate({
    
      rules:{
        "user[phone]": {
          required_group: [1 , ".phone-address"],
          number: true
        },
        "user[address]":{
          required_group:[1 , ".phone-address"]
        },
        "user[password]": {required: true ,minlength: 6},
        "user[password_confirmation]": {equalTo: "#user_password"}
      } 
      
    })
    
  });
  
